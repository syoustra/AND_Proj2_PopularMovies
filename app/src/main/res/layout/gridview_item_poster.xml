<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridview_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="250dp"
    android:maxWidth="175dp">

    <ImageView
        android:id="@+id/poster_for_gridview"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="48dp"
        android:contentDescription="@string/movie_poster_content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/film_not_found"
        app:layout_constraintBottom_toTopOf="@+id/title_for_testing_grid"
        app:layout_constraintEnd_toEndOf="@+id/title_for_testing_grid"
        app:layout_constraintStart_toStartOf="@+id/title_for_testing_grid"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_for_testing_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poster_for_gridview" />


</android.support.constraint.ConstraintLayout>